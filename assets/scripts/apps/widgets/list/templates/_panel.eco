<div class="panel panel-<%= @color %>">
  <div class="panel-heading">
    <a href="<%= @link %>" class="panel-title">
      <i class="fa <%= @icon %>"></i>
      <span class="name"><%= @name %></span>
      <span class="badge"><%= @badge %></span>
    </a>
  </div>
  <div class="widget-region list-group"></div>
</div>
