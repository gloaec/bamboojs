<a href="<%= @link %>" class="icon-widget" role="group" data-toggle="tooltip" data-placement="bottom" title="<%= @name %>">
  <button class="btn btn-lg btn-<%= @color %>">
    <i class="fa <%= @icon %> fa-fw fa-2x"></i>
    <span class="badge"><%= @safe @badge %></span>
  </button>
  <span class="icon-widget-label name"><%= @name %></span>
</a>
